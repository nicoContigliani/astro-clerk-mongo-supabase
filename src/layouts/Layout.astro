        transform: translateY(-4px);
      }

      [data-menu-line]:last-child {
        transform: translateY(4px);
      }

      [data-menu-btn][data-menu-active] {
        transform: rotate(180deg);
        background: var(--primary);
        border-color: var(--primary);
      }

      [data-menu-btn][data-menu-active] [data-menu-line] {
        background: white;
      }

      [data-menu-btn][data-menu-active] [data-menu-line]:first-child {
        transform: rotate(45deg);
      }

      [data-menu-btn][data-menu-active] [data-menu-line]:last-child {
        transform: rotate(-45deg);
      }

      [data-main] {
        min-height: 100vh;
        padding-top: var(--header-height);
        animation: fadeIn 600ms var(--ease);
      }

      [data-footer] {
        background: var(--bg-secondary);
        border-top: 1px solid var(--divider);
        padding: var(--space-12) var(--space-4) var(--space-8);
        margin-top: auto;
      }

      @media (min-width: 768px) {
        [data-footer] {
          padding: var(--space-16) var(--space-6) var(--space-12);
        }
      }

      [data-footer-container] {
        max-width: var(--max-width);
        margin: 0 auto;
      }

      [data-footer-grid] {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-8);
        margin-bottom: var(--space-8);
      }

      @media (min-width: 640px) {
        [data-footer-grid] {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 1024px) {
        [data-footer-grid] {
          grid-template-columns: 2fr repeat(3, 1fr);
          gap: var(--space-12);
          margin-bottom: var(--space-12);
        }
      }

      [data-footer-section] {
        text-align: center;
      }

      @media (min-width: 1024px) {
        [data-footer-section] {
          text-align: left;
        }
        
        [data-footer-section]:first-child {
          padding-right: var(--space-8);
        }
      }

      [data-footer-logo] {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: var(--space-2);
        font-size: 20px;
        font-weight: 700;
        color: var(--text);
        margin-bottom: var(--space-4);
      }

      @media (min-width: 1024px) {
        [data-footer-logo] {
          justify-content: flex-start;
        }
      }

      [data-footer-desc] {
        color: var(--text-secondary);
        line-height: 1.6;
        font-size: 15px;
        margin-bottom: var(--space-6);
      }

      [data-social-links] {
        display: flex;
        gap: var(--space-3);
        justify-content: center;
      }

      @media (min-width: 1024px) {
        [data-social-links] {
          justify-content: flex-start;
        }
      }

      [data-social-link] {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: var(--radius-lg);
        background: var(--surface);
        color: var(--text-secondary);
        border: 1px solid var(--border);
        transition: all 300ms var(--ease);
      }

      [data-social-link]:hover {
        background: var(--surface-solid);
        color: var(--primary);
        border-color: var(--primary);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
      }

      [data-footer-title] {
        font-size: 13px;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.08em;
        margin-bottom: var(--space-4);
      }

      [data-footer-links] {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
      }

      [data-footer-links] a {
        color: var(--text);
        text-decoration: none;
        font-size: 15px;
        font-weight: 500;
        transition: all 150ms var(--ease);
        padding: var(--space-1) 0;
        position: relative;
        display: inline-block;
      }

      [data-footer-links] a::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--primary);
        transition: width 300ms var(--ease);
      }

      [data-footer-links] a:hover {
        color: var(--primary);
      }

      @media (min-width: 1024px) {
        [data-footer-links] a:hover {
          padding-left: var(--space-2);
        }
        
        [data-footer-links] a:hover::before {
          width: 12px;
        }
      }

      [data-footer-bottom] {
        padding-top: var(--space-8);
        border-top: 1px solid var(--divider);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: var(--space-4);
        text-align: center;
      }

      @media (min-width: 768px) {
        [data-footer-bottom] {
          flex-direction: row;
          justify-content: space-between;
          text-align: left;
        }
      }

      [data-copyright] {
        color: var(--text-secondary);
        font-size: 13px;
        font-weight: 400;
      }

      [data-footer-meta] {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        color: var(--text-secondary);
        font-size: 13px;
        flex-wrap: wrap;
        justify-content: center;
      }

      @media (min-width: 768px) {
        [data-footer-meta] {
          justify-content: flex-end;
        }
      }

      [data-footer-meta] a {
        color: var(--text-secondary);
        text-decoration: none;
        transition: color 150ms var(--ease);
        font-weight: 500;
      }

      [data-footer-meta] a:hover {
        color: var(--primary);
      }

      [data-separator] {
        opacity: 0.3;
        display: none;
      }

      @media (min-width: 640px) {
        [data-separator] {
          display: inline;
        }
      }

      @keyframes slideDown {
        from {
          transform: translateY(-100%);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes pulse {
        0%, 100% {
          opacity: 1;
          transform: translateX(-50%) scale(1);
        }
        50% {
          opacity: 0.5;
          transform: translateX(-50%) scale(0.8);
        }
      }

      ::-webkit-scrollbar {
        width: 10px;
        height: 10px;
      }

      ::-webkit-scrollbar-track {
        background: var(--bg);
        border-radius: var(--radius-full);
      }

      ::-webkit-scrollbar-thumb {
        background: var(--text-tertiary);
        border-radius: var(--radius-full);
        border: 2px solid var(--bg);
      }

      ::-webkit-scrollbar-thumb:hover {
        background: var(--text-secondary);
      }

      ::-webkit-scrollbar-thumb:active {
        background: var(--primary);
      }

      ::selection {
        background: var(--primary);
        color: white;
      }

      :focus-visible {
        outline: 2px solid var(--primary);
        outline-offset: 2px;
        border-radius: var(--radius-sm);
      }

      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }
    </style>
  </body>
</html>