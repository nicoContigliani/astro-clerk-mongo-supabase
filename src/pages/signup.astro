---
import { SignUp } from "@clerk/astro/components";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Create Account">
  <main style="display: flex; justify-content: center; align-items: center; min-height: calc(100vh - 200px); padding: 2rem 1rem;">
    <div style="width: 100%; max-width: 420px;">
      <div style="text-align: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2rem; margin-bottom: 0.5rem; background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
          Join Visual Dilemma
        </h1>
        <p style="color: #666; margin: 0;">
          Create your account to start playing
        </p>
      </div>
      <SignUp 
        routing="path"
        path="/signup"
        signInUrl="/signin"
        redirectUrl="/"
        appearance={{
          variables: {
            colorPrimary: '#3245ff',
            colorText: '#111827',
            colorTextSecondary: '#6b7280',
            colorBackground: '#ffffff',
            colorInputBackground: '#ffffff',
            colorInputText: '#111827',
          },
          elements: {
            rootBox: {
              width: '100%',
              margin: '0 auto'
            },
            card: {
              boxShadow: '0 10px 40px rgba(0,0,0,0.1)',
              borderRadius: '16px',
              border: '1px solid #e5e7eb',
              width: '100%'
            },
            headerTitle: {
              fontSize: '1.5rem',
              fontWeight: 'bold'
            },
            headerSubtitle: {
              fontSize: '0.875rem'
            },
            formButtonPrimary: {
              background: 'linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%)',
              borderRadius: '8px',
              padding: '0.75rem 1.5rem',
              fontSize: '1rem',
              fontWeight: '600'
            },
            formFieldInput: {
              borderRadius: '8px',
              padding: '0.75rem'
            },
            footerActionLink: {
              fontWeight: '600'
            },
            socialButtonsBlockButton: {
              borderRadius: '8px',
              border: '1px solid #e5e7eb'
            },
            dividerLine: {
              background: '#e5e7eb'
            },
            dividerText: {
              fontSize: '0.875rem'
            }
          }
        }}
      />
      <div style="text-align: center; margin-top: 2rem; color: #6b7280; font-size: 0.875rem;">
        <p>By signing up, you agree to our <a href="/terms" style="color: #3245ff;">Terms</a> and <a href="/privacy" style="color: #3245ff;">Privacy Policy</a></p>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Estilos para los estados hover (deben ir en un tag style separado) */
  .cl-formButtonPrimary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(50, 69, 255, 0.3) !important;
  }
  
  .cl-footerActionLink:hover {
    text-decoration: underline !important;
  }
  
  .cl-socialButtonsBlockButton:hover {
    border-color: #3245ff !important;
    transform: translateY(-2px);
  }
</style>